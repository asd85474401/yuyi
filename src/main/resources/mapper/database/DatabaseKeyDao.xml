<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kcidea.erms.dao.database.DatabaseKeyDao">

    <select id="findOneByApiKey" resultType="com.kcidea.erms.domain.database.DatabaseKey">
        select * from database_key
        where api_key = #{apiKey}
        limit 1
    </select>

    <select id="findOneBySidDid" resultType="com.kcidea.erms.domain.database.DatabaseKey">
        select * from database_key
        where s_id = #{sid}
        and d_id = #{did}
        limit 1
    </select>
</mapper>