<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kcidea.erms.dao.fund.SchoolBudgetDao">

    <select id="findCountBySidName" resultType="java.lang.Integer">
        select count(id)
        from school_budget
        <where>
            <if test="sid != null">
                and s_id = #{sid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>
    <select id="findSelectListBySid" resultType="com.kcidea.erms.model.common.IdNameModel">
        SELECT id,name
        FROM school_budget
        WHERE s_id = #{sid}
    </select>
</mapper>
